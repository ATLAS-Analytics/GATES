doctype html
html
    include ./head.pug
    body
        include ./navigation.pug

        section#gtco-header.bg-light
            .container
                .row
                    .col-lg-5.mx-auto
                        h2 Experiment
                        p.lead
                        | Define your experiment.
                    .col-lg-6.mx-auto
                        if experiment.id
                            - var butt='UPDATE'
                            h2 Edit Experiment
                        else
                            - var butt='CREATE'
                            h2 Create Experiment
                        form#experiment_update(action='#')
                            .form-group
                                label(for='name') Name *
                                input#name.form-control(type='text',required='',value=experiment.name)
                                p#name_valid
                            .form-group
                                label(for='description') Description * 
                                input#description.form-control(type='text',required='',value=experiment.description)
                                p#description_valid
                            .form-group
                                label(for='exp_url') Experiment web page/github repo.
                                input#teamurl.form-control(type='text', value=experiment.url)
                            .form-group
                                input.btn.btn.btn-primary(type='submit', value=butt)

        hr
        include ./footer.pug

        script(src='/js/main.js')
        script(src='/js/handling.js')


