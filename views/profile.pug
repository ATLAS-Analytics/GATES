doctype html
html
    include ./head.pug
    body
        include ./navigation.pug

        section#gtco-header.gtco-cover.gtco-cover-xs.gtco-inner(style='background-color: rgba(52, 58, 64, 0.4)')
            .gtco-container.container
                .row
                .col-lg-5.mx-auto
                    p.lead
                    img(src='images/cube.png')
                .col-lg-4.mx-auto
                    .card(style='width: 18rem;')
                    .card-body
                        h4.card-title Profile Information
                        div
                        | Name:
                        p#yourname.card-text #{yourname}
                        div
                        | Email:
                        p#youremail.card-text #{youremail}
                        div
                        | Organization:
                        p#yourorganization.card-text #{yourorganization}
                        hr
                        button#logout_button.btn.btn-primary Logout

        hr
        include ./footer.pug
        //- h1 #{pod_name} Pod Log  
        //- p #{content}.


        // jQuery
        script(src='js/jquery.min.js')
        // jQuery Easing
        script(src='js/jquery.easing.1.3.js')
        // Bootstrap
        script(src='js/bootstrap.min.js')
        // Waypoints
        script(src='js/jquery.waypoints.min.js')
        // Carousel
        script(src='js/owl.carousel.min.js')
        // Magnific Popup
        script(src='js/jquery.magnific-popup.min.js')
        script(src='js/magnific-popup-options.js')
        // Main
        script(src='js/main.js')

